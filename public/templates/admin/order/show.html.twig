                    <td>{{ order.address }}</td>
                </tr>
                <tr>
                    <th class="cart_menu">City</th>
                    <td>{{ order.city }}</td>
                </tr>
                <tr>
                    <th class="cart_menu">Phone</th>
                    <td>{{ order.phone }}</td>
                </tr>

                <tr>
                    <th class="cart_menu">Updated_at</th>
                    <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th class="cart_menu">Created_at</th>
                    <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <form action="{{ path('admin_order_update', {'id': order.id}) }}" method="post" >
                    <tr>
                        <th class="cart_menu">Shipinfo</th>
                        <td><textarea name="shipinfo" cols="15" rows="3"> {{ order.shipinfo }} </textarea></td>
                    </tr>

                    <tr>
                        <th class="cart_menu">Status</th>
                        <td><select name="status"> <option>{{ order.status }}</option>
                                <option>Accepted</option>
                                <option>In Shipping</option>
                                <option>Canceled</option>
                                <option>Completed</option>



                            </select> </td>
                    </tr>
                    <tr>
                        <th class="cart_menu">Note</th>
                        <td><textarea name="note" cols="15" rows="3">{{ order.note }}</textarea></td>
                    </tr>



                </tbody>
            </table>

            <input class="btn btn-primary" type="submit" value="Update" >
            </form>
        </div> </div>
 </section>


<section id="cart_items"><div class="container" >
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                <tr class="cart_menu">


                    <td class="description">Product Name</td>
                    <td class="price">Price</td>
                    <td class="quantity">Quantity</td>
                    <td class="quantity">Status</td>
                    <td class="total">Total</td>
                    <td></td>
                </tr>
                </thead>
                <tbody>
                {% set total=0 %}
                {% for shopcart in orderdetail %}

                    <tr>




                        <td class="cart_description">
                            <h4>{{ shopcart.name }}</h4>

                        </td>
                        <td class="cart_price">
                            <p>${{ shopcart.price }}</p>
                        </td>
                        <td class="cart_quantity">
                            <div class="cart_quantity_button">

                                <input   readonly class="cart_quantity_input" type="text" size="2" value="{{ shopcart.quantity }}" autocomplete="off">

                            </div>
                        </td>
                        <td class="cart_price">
                            <p>{{ shopcart.status }}</p>
                        </td>
                        <td class="cart_total">
                            <p class="cart_total_price">${{ shopcart.amount}}</p>
                        </td>

                    </tr>

                    {% set total=total + (shopcart.quantity*shopcart.price) %}
                {% endfor %}
                <tr ><td></td> <td></td> <td></td><td><td class="cart_menu" style="font-size: 120%"> Total: {{ total }} $</td></tr>

                {{ include ('admin/messages.html.twig') }}
                </tbody>
            </table>
