            <input value="{{ user.password }}" type="password"  class="form-control" id="user_password" name="user[password]" required="required" maxlength="150"></div>
        <div class="form-group"><label for="user_type" class="required"> <b class="text-muted mb-3 mt-4 d-block">Status:</b></label>
            <input value="{{ user.status }}" type="text"  class="form-control" id="user_status" name="user[status]" required="required" maxlength="10"></div>




            <div id="users" class="col-6 mt-5">
                <div class="form-group"><label class="required"> <b class="text-muted mb-3 mt-4 d-block">Role:</b></label>
                    <div class="form-group">

                        <select size="1" name="user[roles]"  class="form-control" >
                                 
                                 <option value= "ROLE_ADMIN">ROLE_ADMIN</option>
                                 <option value="ROLE_USER">ROLE_USER</option>
                          





                        </select>

                    </div>
                    <input type="hidden"  class="form-control"  name="user[phone]" value="user[phone]">
                    <input type="hidden"  class="form-control"  name="user[address]" value="user[address]">
                    <input type="hidden"  class="form-control"  name="user[city]" value="user[city]">

                </div> </div>





        <button class="btn btn-primary mt-4 pr-4 pl-4" type="submit">Submit</button>



