
{% extends 'adminbase.html.twig' %}

{% block title %}Users info Edit{% endblock %}
{% block page %}  <h4 class="page-title pull-left">Edit The Selected Users info</h4>{% endblock %}
{% block path %}  <li><a href="{{ path('admin_user') }}">Users List </a></li> <li> <a href="">Edit Users info </a></li> {% endblock %}
{% block content %}



    <div class="card">
        <div class="card-body">
            <h4 class="header-title" style="color: rebeccapurple">Enter Users New Info</h4>

    <div class="col-12 mt-5">


                <form method="post">

    <div id="userss" class="col-6 mt-5">
        <div class="form-group"><label for="userss_name" class="required"> <b class="text-muted mb-3 mt-4 d-block">Name:</b></label>
            <input type="text"  class="form-control" id="user_name" name="user[name]" required="required" maxlength="50" value="{{ user.name }}">
        </div><div class="form-group"><label for="userss_email" class="required"> <b class="text-muted mb-3 mt-4 d-block">Email:</b></label>
