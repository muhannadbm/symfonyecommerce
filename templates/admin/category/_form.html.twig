





    <div class="card">
        <div class="card-body">
            <h4 class="header-title" style="color: rebeccapurple">Create New Category</h4>

            <div class="col-12 mt-5">

                <form method="post">

                    <div id="users" class="col-6 mt-5">
                        <div class="form-group"><label class="required"> <b class="text-muted mb-3 mt-4 d-block">Parentid:</b></label>
                            <div class="form-group">

                                <select size="1" name="category[parentid]"  class="form-control" >
                                    <option>{{ category.parentid }}</option>
                                    <option value ="Main Category" >Main Category</option>
                                    {% for cat in catlist %}
                                        <option value="{{ cat.title }}"> {{ cat.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>


                        <div class="form-group"><label class="required"> <b class="text-muted mb-3 mt-4 d-block">Title:</b></label>
                            <input type="text"  class="form-control" id="category_title" name="category[title]" required="required" maxlength="20">

                            <div class="form-group"><label class="required"> <b class="text-muted mb-3 mt-4 d-block">Keywords:</b></label>
                                <input type="text"  class="form-control" id="category_keywords" name="category[keywords]" required="required" maxlength="250">
                          </div>
                            <div class="form-group"><label class="required"> <b class="text-muted mb-3 mt-4 d-block">Description:</b></label>
                                <input type="text"  class="form-control" id="category_desc" name="category[description]" required="required" maxlength="250">
                            </div>
                            <div class="form-group"><label class="required"> <b class="text-muted mb-3 mt-4 d-block">Status:</b></label>
                                <input type="text"  class="form-control" id="category_status" name="category[status]" required="required" maxlength="20">
                            </div>






                        <button class="btn btn-primary mt-4 pr-4 pl-4" type="submit">Submit</button>





                </form>
            </div>
        </div>
    </div>





