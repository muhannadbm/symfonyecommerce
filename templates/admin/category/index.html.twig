
{% extends 'adminbase.html.twig' %}

{% block title %}Categories List{% endblock %}
{% block page %}  <h4 class="page-title pull-left">Categories List</h4>{% endblock %}
{% block path %}  <li><a href={{ path('admin_category_index') }}>Categories List </a></li> {% endblock %}
{% block content %}

<div class="card">
    <div class="card-body">
        <h4 class="header-title">Categories</h4>

        <a href="{{ path('admin_category_new') }}"class="btn btn-outline-success mb-3" type="button">Add Category</a>
        <div class="single-table">
            <div class="table-responsive">
                <table class="table table-hover text-center">
                    <thead class="text-uppercase bg-dark">

                    <tr class="text-white">
                    <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Parentid</th>
                <th scope="col">Keywords</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>

        {% for category in categories %}
            <tr>
                <td scope="row">{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.parentid }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.status }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id,'pid': category.parentid}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('admin_category_edit', {'id': category.id,'pid': category.parentid}) }}"><i class="fa fa-magic"></i></a>
                    {{ include('admin/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No Records Found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
