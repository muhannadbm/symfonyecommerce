{% extends 'index.html.twig' %}

{% block title %}Order Data{% endblock %}

{% block content %}
    <head>
    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0px;
        }
        article, aside, details, figcaption, figure, footer, header, hgroup, main, nav, section, summary {
            display: block;
        }
        body {
            margin: 0;
        }
        html {
            font-family: sans-serif;
            -webkit-text-size-adjust: 100%;
            -ms-text-size-adjust: 100%;
        }
        *, *::before, *::after {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }
        #cart_items .cart_info .cart_menu {
            background: #FE980F;
            color: #fff;
            font-size: 16px;
            font-family: "Roboto",sans-serif;
            font-weight: normal;
        }
        #cart_items .cart_info .table.table-condensed tr {
            border-bottom: 1px solid#F7F7F0;
        }
        #cart_items .cart_info .table.table-condensed thead tr {
            height: 51px;
        }
        #cart_items .cart_info .table.table-condensed tr:last-child {
            border-bottom: 0;
        }
        table {
            max-width: 100%;
            background-color: transparent;
        }
        .table {
            width: 100%;
            margin-bottom: 20px;
        }
        #cart_items .cart_info {
            border: 1px solid #E6E4DF;
            margin-bottom: 50px;
        }
        .container {
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }
        /* @media all and (min-width:768px) */
        .container {
            width: 750px;
        }
        body {
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            font-size: 14px;
            line-height: 1.4285;
            color: #333;
            background-color: #fff;
        }
        body {
            -webkit-backface-visibility: hidden;
        }
        body {
            font-family: "Roboto",sans-serif;
            background: ;
            position: relative;
            font-weight: 400px;
        }
        html {
            font-size: 62.5%;
            -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        }
        .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
            padding: 8px;
            line-height: 1.4285;
            vertical-align: top;
            border-top: 1px solid #ddd;
        }
        .table-condensed > thead > tr > th, .table-condensed > tbody > tr > th, .table-condensed > tfoot > tr > th, .table-condensed > thead > tr > td, .table-condensed > tbody > tr > td, .table-condensed > tfoot > tr > td {
            padding: 5px;
        }
        .cart_info table tr td {
            border-top: 0 none;
            vertical-align: inherit;
        }
        .table > caption + thead > tr:first-child > th, .table > colgroup + thead > tr:first-child > th, .table > thead:first-child > tr:first-child > th, .table > caption + thead > tr:first-child > td, .table > colgroup + thead > tr:first-child > td, .table > thead:first-child > tr:first-child > td {
            border-top: 0;
        }
        #cart_items .cart_info .image {
            padding-left: 30px;
        }
    </style>
    </head>

<center><h2> My Order Data </h2> <br>  <a href="{{ path('orders_index') }}">back to list</a>



    {{ include('orders/_delete_form.html.twig') }}</center> <br>



    {{ include ('home/sidebar2.html.twig') }}
<section id="cart_items" style="" ><div class="container" style="float: right;  ">

        <div class="table-responsive cart_info col-3" style="width: 50%;" >
            <table class="table table-condensed" >


        <tbody>
            <tr >
                <th class="cart_menu" >Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th class="cart_menu">City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Shipinfo</th>
                <td>{{ order.shipinfo }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Status</th>
                <td>{{ order.status }}</td>
            </tr>

            <tr>
                <th class="cart_menu">Updated_at</th>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Created_at</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
            </table>

            </div> </div> </section>

<section id="cart_items"><div class="container" style="float: right">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                <tr class="cart_menu">


                    <td class="description">Product Name</td>
                    <td class="price">Price</td>
                    <td class="quantity">Quantity</td>
                    <td class="quantity">Status</td>
                    <td class="total">Total</td>
                    <td></td>
                </tr>
                </thead>
                <tbody>
                {% set total=0 %}
                {% for shopcart in orderdetail %}

                    <tr>




                        <td class="cart_description">
                            <h4>{{ shopcart.name }}</h4>

                        </td>
                        <td class="cart_price">
                            <p>${{ shopcart.price }}</p>
                        </td>
                        <td class="cart_quantity">
                            <div class="cart_quantity_button">

                                <input   readonly class="cart_quantity_input" type="text" size="2" value="{{ shopcart.quantity }}" autocomplete="off">

                            </div>
                        </td>
                        <td class="cart_price">
                            <p>{{ shopcart.status }}</p>
                        </td>
                        <td class="cart_total">
                            <p class="cart_total_price">${{ shopcart.amount}}</p>
                        </td>

                    </tr>

                {% set total=total + (shopcart.quantity*shopcart.price) %}
                {% endfor %}
                <tr ><td></td> <td></td> <td></td><td><td class="cart_menu" style="font-size: 120%"> Total: {{ total }} $</td></tr>

                {{ include ('admin/messages.html.twig') }}
                </tbody>
            </table>
        </div>

{% endblock %}
