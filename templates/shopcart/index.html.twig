	border-bottom: 0;
}
table {
	max-width: 100%;
	background-color: transparent;
}
.table {
	width: 100%;
	margin-bottom: 20px;
}
#cart_items .cart_info {
	border: 1px solid #E6E4DF;
	margin-bottom: 50px;
}
.container {
	padding-right: 15px;
	padding-left: 15px;
	margin-right: auto;
	margin-left: auto;
}
/* @media all and (min-width:768px) */
.container {
	width: 750px;
}
body {
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: 14px;
	line-height: 1.4285;
	color: #333;
	background-color: #fff;
}
body {
	-webkit-backface-visibility: hidden;
}
body {
	font-family: "Roboto",sans-serif;
	background: ;
	position: relative;
	font-weight: 400px;
}
html {
	font-size: 62.5%;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
.table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
	padding: 8px;
	line-height: 1.4285;
	vertical-align: top;
	border-top: 1px solid #ddd;
}
.table-condensed > thead > tr > th, .table-condensed > tbody > tr > th, .table-condensed > tfoot > tr > th, .table-condensed > thead > tr > td, .table-condensed > tbody > tr > td, .table-condensed > tfoot > tr > td {
	padding: 5px;
}
.cart_info table tr td {
	border-top: 0 none;
	vertical-align: inherit;
}
.table > caption + thead > tr:first-child > th, .table > colgroup + thead > tr:first-child > th, .table > thead:first-child > tr:first-child > th, .table > caption + thead > tr:first-child > td, .table > colgroup + thead > tr:first-child > td, .table > thead:first-child > tr:first-child > td {
	border-top: 0;
}
#cart_items .cart_info .image {
	padding-left: 30px;
}
</style>
</head>
<body>

{{ include ('home/sidebar2.html.twig') }}

<h2><center> My Shopcart</center></h2> <br>
<section id="cart_items"><div class="container" style="float: right">
    <div class="table-responsive cart_info">
        <table class="table table-condensed">
            <thead>
            <tr class="cart_menu">

                <td class="image">Item</td>
                <td class="description">Product Name</td>
                <td class="price">Price</td>
                <td class="quantity">Quantity</td>
                <td class="total">Total</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            {% set total=0 %}

            {% for shopcart in shopcarts %}
                <tr>
                    <td class="image">
                        <a href=""><img alt="" src="{{ asset('uploads') }}/images/{{ shopcart.image }}" height="70px" width="70px"></a>
                    </td>
                    <td class="cart_description">
                        <h4>{{ shopcart.title }}</h4>

                    </td>
                    <td class="cart_price">
                        <p>${{ shopcart.sellprice }}</p>
                    </td>
                    <td class="cart_quantity">
                        <div class="cart_quantity_button">

                            <input   readonly class="cart_quantity_input" type="text" size="2" value="{{ shopcart.quantity }}" autocomplete="off">

                        </div>
                    </td>
                    <td class="cart_total">
                        <p class="cart_total_price">${{ shopcart.quantity * shopcart.sellprice}}</p>
                    </td>
                    <td class="cart_delete">
                        {{ include('shopcart/_delete_form.html.twig') }}
                    </td>
                </tr>

                {% set total=total + (shopcart.quantity*shopcart.sellprice) %}
            {% else %}
                <tr>
                    <td colspan="5">You have no Items in your Cart</td>
                </tr>

            {% endfor %}
            <tr class="cart_menu"> <td>Items In Shop Cart: {{ shopcount }} </td> </tr>
                  <tr ><td></td> <td><a class="btn btn-default check_out" href="{{ path('orders_new') }}">Check Out</a></td> <td></td><td><td class="cart_menu" style="font-size: 120%"> Total: {{ total }} $</td></tr>

            {{ include ('admin/messages.html.twig') }}
            </tbody>
        </table>
    </div>


{% endblock %}

