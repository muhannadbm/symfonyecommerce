    {{ include ('home/sidebar2.html.twig') }}
<section id="cart_items" style="" ><div class="container" style="float: right;  ">

        <div class="table-responsive cart_info col-3" style="width: 50%;" >
            <table class="table table-condensed" >


        <tbody>
            <tr >
                <th class="cart_menu" >Id</th>
                <td>{{ app.user.id }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Roles</th>
                <td>{{ app.user.roles|join }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Name</th>
                <td>{{ app.user.name }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Address</th>
                <td>{{ app.user.address }}</td>
            </tr>
            <tr>
                <th class="cart_menu">City</th>
                <td>{{ app.user.city }}</td>
            </tr>

            <tr>
                <th class="cart_menu">Phone No</th>
                <td>{{ app.user.phone }}</td>
            </tr>
            <tr>
                <th class="cart_menu">Status</th>
                <td>{{ app.user.status }}</td>
            </tr>

            <tr>
                <th class="cart_menu">Updated_at</th>
                <td>{{ app.user.updatedAt ? app.user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
